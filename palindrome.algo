FUNCTION Is_palindrome(s,l,r) : 
VAR
    test:BOOLEAN;
    l,r:INTEGER;
BEGIN
    IF (length(s)<2) THEN
        RETURN True;
    END_IF
    l=0;
    r=length(s)-1;
    IF (s[left]=s[right]) THEN
    
        RETURN Is_palindrome(s,l+1,r-1)
    ELSE
        RETURN False;
    END_IF
    RETURN Is_palindrome(s,l,r) ;
END
